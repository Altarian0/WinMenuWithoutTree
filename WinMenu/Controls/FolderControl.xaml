<UserControl x:Class="WinMenu.Controls.FolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinMenu.Controls"
             mc:Ignorable="d" Height="100" Width="450">
    <Grid >
        <StackPanel Orientation="Horizontal">
            <Image Source="/WinMenu;component/1200px-OneDrive_Folder_Icon.svg.png" HorizontalAlignment="Left" Width="90" Height="80" Margin="10,10,10,10"/>
            <StackPanel Width="320" Orientation="Vertical" Margin="10">
                <TextBlock Text="{Binding Title}" FontSize="20" Margin="0,0,0,0"/>
                <TextBlock Text="{Binding Size}" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding GroupName}" Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
